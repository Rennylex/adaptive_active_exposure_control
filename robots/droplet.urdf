<?xml version="1.0"?>

<robot name="bluerov">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.235 0.175 .005"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <link name="fcu">
    <visual>
      <geometry>
        <box size="0.10 .05 .01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <link name="cam_0_optical_frame">
    <visual>
      <geometry>
        <box size="0.06 .28 .03"/>
      </geometry>
      <origin rpy="0 0.0 0" xyz="0.0 0 0"/>
    </visual>
  </link>

  <link name="thruster0">
    <visual>
      <geometry>
        <cylinder length="0.100" radius="0.048"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <link name="gripper_center">
    <visual>
      <geometry>
        <box size="0.235 0.175 .005"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_link_to_gripper_center" type="fixed">
    <parent link="base_link"/>
    <child link="gripper_center"/>
    <origin rpy="0 0 0" xyz="0.0 0 -0.68"/>
  </joint>

  <joint name="base_link_to_thruster0" type="fixed">
    <parent link="base_link"/>
    <child link="thruster0"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <joint name="base_link_to_fcu" type="fixed">
    <parent link="base_link"/>
    <child link="fcu"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <!-- base_link is a frame centered at the middle of the robot near the top. -->
  <joint name="base_link_to_cam_0_optical_frame" type="fixed">
    <parent link="base_link"/>
    <child link="cam_0_optical_frame"/>
    <origin rpy="-1.57 0.0 -1.57" xyz="0.13335 0.0 0.0"/>
  </joint>

</robot>
